<%= form_for(setup_entry(@entry)) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%# f.label :user_id %><br>
    <%= f.hidden_field :user_id, :value => @user.id %>
  </div>
  <div class="field">
    <%= f.label :company %><br>
    <%= f.text_field :company %>
  </div>

  <%= f.fields_for :offer, Offer.new do |o| %>

    <div class="field">
      <%= o.label :job_title %><br>
      <%= o.text_field :job_title %>
    </div>
    <div class="field">
      <%= o.label :location %><br>
      <%= o.text_field :location %>
    </div>
    <div class="field">
      <%= o.label :remote %><br>
      <%= o.check_box :remote %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
