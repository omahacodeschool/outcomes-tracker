<% if @translations.any? %>
  <table class="tables">
    <% @translations.each do |translation| %>
      <tr>
        <td class="tables__cell">
          <div>
            <%= translation.project_name %> - 
            <%= link_to translation.truncate, translation %>
          </div>
          <i class= "<%= translation.icon %>" aria-hidden="true"></i>
        </td>
      </tr>
    <% end %>
  </table>  
<% end %>
