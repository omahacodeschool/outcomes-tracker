<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <%= link_to(image_tag("ocs_star.png", alt: ""), :root, class: "logo") %>
    
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>

    <nav role="navigation">
      <ul class="navigation-menu">
        <li class="nav-link"><%= link_to "Outcomes Tracker", :root %></li>
      </ul>
    </nav>

    <div class="navigation-tools">
      <% if current_user %>
        <ul id="js-navigation-menu" class="navigation-menu show">
          <% if current_user.admin? %>
            <li class="nav-link">
              <%= link_to("Students", :users) %>
            </li>
          <% end %>

          <% if current_user.admin? %>
            <li class="nav-link">
              <%= link_to("Companies", :companies) %>
            </li>
          <% end %>

          <% if current_user.admin? %>
            <li class="nav-link">
              <%= link_to("Resumé Translator", :translations) %>
            </li>
          <% else %>
            <li class="nav-link">
              <%= link_to("Resumé Translator", :new_translation) %>
            </li>
          <% end %>

          <li class="nav-link">
            <%= link_to("Add Application", :new_job_application) %>
          </li>

          <% if current_user.admin? %>
            <li class="nav-link">
              <%= link_to("Settings", :admin_root) %>
            </li>
          <% end %>

          <li class="nav-link">
            <%= link_to 'Log Out', :logout, method: :delete %>
          </li>

          <li class="nav-link">
            <%= link_to image_tag(current_user.image_url), :update_profile, class: "nav-link__avatar" %>
          </li>
        </ul>
      <% end %>
    </div>

  </div>
</header>
