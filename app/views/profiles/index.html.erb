<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Cohort</th>
      <th>Gender</th>
      <th>Birthdate</th>
      <th>Race</th>
      <th>Ethnicity</th>
      <th>Military</th>
      <th>Disability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user_id %></td>
        <td><%= profile.cohort_id %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.birthdate %></td>
        <td><%= profile.race %></td>
        <td><%= profile.ethnicity %></td>
        <td><%= profile.military %></td>
        <td><%= profile.disability %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

