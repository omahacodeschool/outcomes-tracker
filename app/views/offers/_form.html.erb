<%= form_for(@offer) do |f| %>
  <% if @offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
      <% @offer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if params[:action] == "new" %>
    <p>
      <%= f.label "For which existing application?" %>
      <%= f.select(:entry_id, @entries.collect {|e| [e.company.name, e.id]}) %>
    </p>
  <% elsif params[:action] == "add_new_to_existing_entry" %>
    <p>
      <%= f.hidden_field :entry_id, :value => @offer.entry_id %>
    </p>
  <% end %>

  <p>
    <%= f.label :job_title %>
    <%= f.text_field :job_title, value: @entry.job_application.job_title %>
  </p>
  
  <%= f.fields_for :salary do |ff| %>
    <p>
      <%= ff.label :amount, "Salary/Rate" %>
      <%= ff.text_field :amount, placeholder: "49,000 or 20/hr" %>
      <%= ff.select(:rate, options_for_select(Salary.rates.keys, "hourly")) %>
    </p>
  <% end %>

  <p>
    <%= f.label :location %>
    <%= f.text_field :location, value: @entry.job_application.location %>
  </p>
  <p>
    <%= f.label "Employment type" %>
    <%= f.select(:nature_of_employment, options_for_select(Offer.nature_of_employments.keys, @entry.job_application.nature_of_employment)) %>
  </p>
  <p>
    <label for="offer_remote">
      <%= f.check_box :remote, checked: @entry.job_application.remote %>
      Remote?
    </label>
  </p>

  <%= f.submit "Save" %>
<% end %>
